from factor._version import __version__ as version
import optparse
import sys
import os
from factor.unarchive import unarchive


if __name__ == '__main__':
    parser = optparse.OptionParser(usage='%prog dir_archive dir_output',
            version='%%prog %s' % (version))
    parser.add_option('-s', '--symlink', help='use symlinks for subtracted data '
        'files instead of copying them', action='store_true', default=False)
    parser.add_option('-c', '--clobber', help='clobber existing files in output directory',
        action='store_true', default=False)
    (options, args) = parser.parse_args()

    if len(args) != 2:
        parser.print_help()
        sys.exit()

    dir_archive = os.path.abspath(args[0])
    dir_output = os.path.abspath(args[1])

    unarchive(dir_archive, dir_output, use_symlinks=options.symlink,
        clobber=options.clobber)
